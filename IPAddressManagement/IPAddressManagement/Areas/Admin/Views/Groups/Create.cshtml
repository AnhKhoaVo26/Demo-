@using IPAddressManagement.Areas.Admin.Models;
@model IPAddressManagement.Areas.Admin.Models.GroupViewModel;
@{
    ViewData["Title"] = "Create Group";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1>Create new Group</h1>
<hr />
@using (Html.BeginForm("Create","Groups",FormMethod.Post,  new { enctype = "multipart/form-data" } ))
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-md-4">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    @Html.LabelFor(m=>m.Name)
                    @Html.TextBoxFor(m=>m.Name,new{@class="form-control"})
                    @Html.ValidationMessageFor(m=>m.Name)
                @Html.ValidationSummary(true)
                </div>
                <div class="form-group">
                    @Html.LabelFor(m=>m.Decription)
                    @Html.TextBoxFor(m=>m.Decription,new{@class="form-control"})
                    @Html.ValidationMessageFor(m=>m.Decription)
                @Html.ValidationSummary(true)
                </div>
                <hr />
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-primary" />
                    @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-sencondary" })
                </div>
        </div>
    </div>
}



